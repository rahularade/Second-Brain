generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum ContentType {
  TWEET
  VIDEO
  LINK
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String

  contents  Content[]
  shareLink ShareLink?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Content {
  id    String      @id @default(uuid())
  title String
  type  ContentType
  link  String

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  tags Tag[] @relation("ContentTags")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, link])
  @@index([title])
}

model Tag {
  id    String @id @default(uuid())
  title String @unique

  contents Content[] @relation("ContentTags")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ShareLink {
  id   String @id @default(uuid())
  hash String @unique

  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
