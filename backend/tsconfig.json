{
    "compilerOptions": {
        "target": "ES2023",

        "module": "nodenext",
        "moduleResolution": "nodenext",

        "rootDir": "./src",
        "outDir": "./dist",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,

    },

    "include": ["src/**/*.ts"]
}
